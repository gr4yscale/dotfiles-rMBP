#### Tumbleweed config ####

export PROJECT_PATH="${HOME}/Code/ios"

# App_GUID seeds all the other environment variables. Call this to reset everything without sourcing bashrc
function cc_set_app_guid() {
    APP_GUID=$(find ~/Library/Application\ Support/iPhone\ Simulator/6.0/Applications/ -path '*Tumbleweed.app' | cut -d/ -f10 | head -1)
    export APP_GUID
    export EVENT_OID="kGdRaEeTd8"

    export APP_PATH="/Users/gr4yscale/Library/Application Support/iPhone Simulator/6.0/Applications/${APP_GUID}"
    export EVENT_DB_PATH="${APP_PATH}/Library/databases/${EVENT_OID}/${EVENT_OID}.sqlite3"
    export USER_DB_PATH="${APP_PATH}/Library/databases/app/tumbleweed.sqlite3"

    alias sqldb='sqlite3 "${EVENT_DB_PATH}"'
    alias userdb='sqlite3 "${USER_DB_PATH}"'
    alias deploydb='zip -j ${PROJECT_PATH}/Tumbleweed/Resources/assets/databases/kGdRaEeTd8.zip "${EVENT_DB_PATH}"'
}
cc_set_app_guid

alias ios='cd ${PROJECT_PATH}'
alias cdsim='cd "${APP_PATH}"'

alias sqlitecc="sqlite3 -column -cmd \"PRAGMA key='c60242c63949c47d2c31c3c5673d1b0437f57a1b27817332bf05b4a268bcd0c6'\""


